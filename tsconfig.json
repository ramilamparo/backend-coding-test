{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2020",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"strict": true
	},
	"include": ["src/**/*.ts", "serverless.ts", "test/**/*.ts"],
	"exclude": [
		"node_modules/**/*",
		".serverless/**/*",
		".webpack/**/*",
		"_warmup/**/*",
		".vscode/**/*",
		"dist"
	],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
