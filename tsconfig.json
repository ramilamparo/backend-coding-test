{
	"compilerOptions": {
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES6",
		"outDir": "./dist",
		"baseUrl": "./",
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@functions/*": ["src/functions/*"],
			"@libs/*": ["src/libs/*"],
			"@models/*": ["src/models/*"],
			"@config/*": ["src/config/*"],
			"@app/*": ["src/app/*"],
			"@test-utils/*": ["test/test-utils/*"],
			"@db/*": ["src/db/*"],
			"@type-utils": ["src/types"]
		}
	},
	"exclude": [
		"node_modules/**/*",
		".serverless/**/*",
		".webpack/**/*",
		"_warmup/**/*",
		".vscode/**/*",
		"dist"
	],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
